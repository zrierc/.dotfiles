{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "source": "~/.config/fastfetch/logo/unit-zerogoki-kai_sm.ans"
  },
  "display": {
    "separator": "❯  ",
    "color": {
      "separator": "cyan",
      "keys": "blue"
    },
    "constants": [
      "───────────────────────────"
    ],
    "key": {
      "type": "string",
      "paddingLeft": 4
    }
  },
  "modules": [
    {
      "type": "title",
      "format": "                                {user-name-colored}{at-symbol-colored}{host-name-colored}",
      "color": {
        "user": "blue",
        "at": "red",
        "host": "blue"
      }
    },
    "break",
    {
      "type": "custom",
      "format": "┌{$1} {#1}System Information{#} {$1}┐"
    },
    {
      "key": "OS           ",
      "type": "os"
    },
    {
      "key": "Kernel       ",
      "type": "kernel"
    },
    {
      "key": "Packages     ",
      "type": "packages"
    },
    {
      "key": "WM           ",
      "type": "wm"
    },
    {
      "key": "DE           ",
      "type": "de"
    },
    {
      "key": "Terminal     ",
      "type": "terminal"
    },
    {
      "key": "Shell        ",
      "type": "shell"
    },
    {
      "key": "Local IP     ",
      "type": "localip",
      "compact": true
    },
    {
      "key": "Uptime       ",
      "type": "uptime"
    },
    "break",
    {
      "type": "custom",
      "format": "{$1} {#1}Hardware Information{#} {$1}"
    },
    {
      "key": "Machine      ",
      "type": "host"
    },
    {
      "key": "CPU          ",
      "type": "cpu"
    },
    {
      "key": "GPU          ",
      "type": "gpu"
    },
    {
      "key": "Memory       ",
      "type": "memory"
    },
    {
      "key": "Vol (/)      ",
      "type": "disk",
      "folders": "/"
    },
    {
      "key": "Vol (/home)  ",
      "type": "disk",
      "folders": "/home"
    },
    {
      "key": "Monitor(s)   ",
      "type": "display"
    },
    "break",
    {
      "type": "custom",
      "format": "└───────── 🍁 \"God in His Heaven, All's Right With The World\" ─────────────┘",
      "outputColor": "italic_"
    },
    "break",
    {
      "type": "colors",
      "paddingLeft": 28,
      "symbol": "circle"
    }
  ]
}
