# display mode switcher
run_cmd() {
  if [[ "$1" == '--pconly' ]]; then
    xrandr --output eDP --primary --auto --output HDMI-A-0 --off
  elif [[ "$1" == '--extend' ]]; then
    ans=$(confirm_selection &)
    if [[ $ans == "$yes" ]]; then
      xrandr --output HDMI-A-0 --primary --auto --rotate normal --left-of eDP
    else
      xrandr --output eDP --primary --auto --output HDMI-A-0 --auto --rotate normal --left-of eDP
    fi
  elif [[ "$1" == '--duplicate' ]]; then
    xrandr --output eDP --primary --output HDMI-A-0 --auto --same-as eDP
  elif [[ "$1" == '--secondscreen' ]]; then
    xrandr --output HDMI-A-0 --primary --auto --output eDP --off
  fi
}

# check connected monitors
if (($monitors >= 2)); then
  chosen="$(run_rofi)"
  case "$chosen" in
  $pconly)
    run_cmd --pconly
    ;;
  $extend)
    run_cmd --extend
    ;;
  $duplicate)
    run_cmd --duplicate
    ;;
  $secondscreen)
    run_cmd --secondscreen
    ;;
  esac
else
  show_notification " 2nd monitor not connected!"
fi
